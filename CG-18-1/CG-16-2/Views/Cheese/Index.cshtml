@model List<CG.Models.Cheese>

@{
    ViewData["Title"] = "Index";
}

<h1>My Cheeses</h1>

<p><a asp-controller="Cheese" asp-action="Add">Click here to add a Cheese</a></p>
<p><a asp-controller="Cheese" asp-action="Remove">Click here to remove a Cheese</a></p>


@if (Model.Count == 0)
{
    <p>No cheeses yet!</p>
}

<ul>
    @foreach (var cheese in Model)
    {
        <li><b>@cheese.Name:</b> @cheese.Description 
            <a asp-controller="Cheese" asp-action="Edit" asp-route-cheeseId="@cheese.CheeseId">edit</a></li>
    }
</ul>

